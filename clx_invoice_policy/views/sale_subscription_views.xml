<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="sale_subscription_view_form_inherited_clx_invoice_policy" model="ir.ui.view">
        <field name="name">sale.subscription.form.view</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='price_unit']"
                   position="before">
                <field name="prorate_amount"/>
                <field name="prorate_end_amount"/>
            </xpath>
            <xpath expr="//group[@name='main']//div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='recurring_next_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='main']//field[@name='date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='main']//field[@name='date_start']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>            
            <xpath expr="//field[@name='pricelist_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>