<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_invoicing_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sales.settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sales_settings_invoicing_policy']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <label for="invoices_generate_since"/>   
                    <field name="invoices_generate_since" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
