<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to add Invoice and customer fields -->
    <record id="view_account_asset_form_inherit_add_fields" model="ir.ui.view">
        <field name="name">view.account.asset.inherit.add.fields</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_revenue_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_depreciation_id']" position="before">
                <field name="account_move_id"/>
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_tree_view_account_asset_sale_add_fields" model="ir.ui.view">
        <field name="name">view.account.asset.tree.inherit.add.fields</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_sale_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='first_depreciation_date']" position="after">
                <field name="account_move_id"/>
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>
</odoo>