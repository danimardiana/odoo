<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form_inherit_clx_inv_policy" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit.clx</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="management_company_type_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_payment_tree_inherit_clx_inv_policy" model="ir.ui.view">
            <field name="name">account.payment.tree.inherit.clx.inv.policy</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="management_company_type_id"/>
                </xpath>
            </field>
        </record>


        <record id="view_payment_add_filter_clx_invoice_policy" model="ir.ui.view">
            <field name="name">account.payment.add.filters</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_overdue']" position="before">
                    <separator/>
                    <filter name="management_company_type_id" string="Mgmt. Company" context="{'group_by': 'management_company_type_id'}"/>
                    <separator/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
