<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bill_com_error_logs_tree" model="ir.ui.view">
        <field name="name">view.bill.com.error.logs.tree</field>
        <field name="model">bill.com.error.logs</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="error_date"/>
                <field name="api_name"/>
                <field name="error_description"/>
            </tree>
        </field>
    </record>

    <record id="view_bill_com_error_logs_search" model="ir.ui.view">
        <field name="name">view.bill.com.error.logs.search</field>
        <field name="model">bill.com.error.logs</field>
        <field name="arch" type="xml">
            <search string="Product Library">
                <field name="api_name"/>
                <field name="error_description"/>
                <group expand="0" string="Group By...">
                    <filter string="API" name="api_name" context="{'group_by':'api_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- form view definition -->
    <record model="ir.ui.view" id="view_bill_com_error_logs_form">
        <field name="name">view.bill.com.error.logs.form</field>
        <field name="model">bill.com.error.logs</field>
        <field name="arch" type="xml">
            <form string="Bill.com Import Errors" create="0" delete="0" edit="0" duplicate="0">
                <sheet>
                    <group>
                        <field name="error_date" readonly="1"/>
                        <field name="api_name" readonly="1"/>
                        <field name="error_description" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bill_com_import_errors" model="ir.actions.act_window">
            <field name="name">Bill.Com Import Errors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bill.com.error.logs</field>
            <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Import Errors" id="bill_com_import_errors_menu"
              sequence="2"
              parent="menu_bill_com_main"
              action="action_bill_com_import_errors"/>
</odoo>
