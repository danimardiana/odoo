<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- All 'Parent' Tasks List/Tree View -->
    <record id="parent_task_tree" model="ir.ui.view">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name" optional="show"/>
                <field name="project_id" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="team_ids_flattened" optional="show"/>
                <field name="team_members_ids" widget="many2many_tags" optional="show"/>
                <field name="clx_priority" optional="show"/>
                <field name="client_services_team" optional="show"/>
                <field name="proof_return_count" optional="hide"/>
                <field name="proof_return_ids_flattened" optional="hide"/>
                <field name="create_date" string="Task Create Date" optional="hide"/>
                <field name="date_deadline" string="Task Due Date" optional="hide"/>
                <field name="task_complete_date" string="Task Complete Date" optional="hide" readonly="1"/>    
                <field name="task_duration" string="Task Duration" optional="hide"/>
                <field name="task_in_progress_date" string="Task In-Progress Date" optional="hide"/>
                <field name="task_proof_internal_date" string="Task Proof Internal Date" optional="hide"/>
                <field name="user_id" string="Account Manager"/>
                <field name="clx_task_manager_id" optional="show"/>
                <field name="clx_task_designer_id" optional="show"/>
                <field name="ops_team_member_id" optional="show"/>
                <field name="tag_ids_flattened" optional="show"/>
                <field name="stage_id" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- All Sub Task List/Tree View -->
    <record id="subtask_tree" model="ir.ui.view">
        <field name="name">project.subtask.tree</field>
        <field name="model">project.task</field>
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name" optional="show"/>
                <field name="project_id" optional="show"/>
                <field name="parent_id" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="team_ids_flattened" optional="show"/>
                <field name="team_members_ids" widget="many2many_tags" optional="show"/>
                <field name="clx_priority" optional="show"/>
                <field name="client_services_team" optional="show"/>
                <field name="proof_return_count" optional="hide"/>
                <field name="proof_return_ids_flattened" optional="hide"/>
                <field name="create_date" string="SubTask Create Date" optional="hide"/>
                <field name="date_deadline" string="SubTask Due Date" optional="hide"/>
                <field name="task_complete_date" string="SubTask Complete Date" optional="hide" readonly="1"/>    
                <field name="task_duration" string="SubTask Duration" optional="hide"/>
                <field name="task_in_progress_date" string="SubTask In-Progress Date" optional="hide"/>
                <field name="task_proof_internal_date" string="SubTask Proof Internal Date" optional="hide"/>
                <field name="user_id" string="Account Manager"/>
                <field name="clx_task_manager_id" optional="show"/>
                <field name="clx_task_designer_id" optional="show"/>
                <field name="ops_team_member_id" optional="show"/>
                <field name="tag_ids_flattened" optional="show"/>
                <field name="stage_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_project_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.project.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">            
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="clx_project_manager_id"/>
                <field name="ops_team_member_id"/>
                <field name="clx_project_designer_id"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="clx_state"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="deadline"/>
                <field name="priority"/>
                <field name="client_services_team"/>
                <field name="create_date" string="Project Create Date" optional="hide"/>
                <field name="complete_date" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Account Manager</attribute>
            </xpath>
        </field>
    </record>

    <!-- 
        Add proof return attibution button to subtask kanban cards
        when stage of subtask is Proof Return. Do not add to parent task
     -->
    <record id="clx_task_management_kanban" model="ir.ui.view" >
        <field name="name">clx.project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='user_id']" position="after">
                <field name="parent_id" invisible="1"/>
            </xpath>
            <xpath expr="//templates/t/div/div/div/div[@class='o_dropdown_kanban dropdown']" position="replace">
                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                        <span class="fa fa-ellipsis-v"/>
                    </a>
                    <div class="dropdown-menu" role="menu">
                        <div t-if="record.stage_id.value == 'Proof Returned' and record.parent_id.value">
                            <a type="object" name="action_view_proof_return" class="dropdown-item">Return Attribution</a>
                            <div role="separator" class="dropdown-divider"/>
                        </div>
                        <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item" data-field="displayed_image_id">Set Cover Image</a>
                        <a name="172" role="menuitem" type="action" class="dropdown-item">Share</a>
                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit Task</a>
                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        <div role="separator" class="dropdown-divider"/>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Add fields to project kanban cards -->
    <record id="view_project_kanban_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">view_project_inherit_kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban//templates//t//div//div[hasclass('o_primary')]" position="after">
                <div>
                    <strong>
                        <span>Account Manager :</span>
                    </strong>
                    <field name="user_id"/>
                    <br/>
                    <strong>
                        <span>Project Manager :</span>
                    </strong>
                    <field name="clx_project_manager_id"/>
                    <br/>
                    <strong>
                        <span>Designer :</span>
                    </strong>
                    <field name="clx_project_designer_id"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inherit Form View to add state for the project it -->
    <record id="edit_project_inherit_clx_project_management" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="implementation_specialist_id"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Ads Link" name="ads_link">
                        <field name="project_ads_link_ids">
                            <tree editable="bottom">
                                <field name="category_id" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                                <field name="description"/>
                                <field name="link"/>
                            </tree>
                        </field>
                </page>
                <page name="extra_details" string="Extra Info">
                    <group>
                        <field name="management_company_type_id"/>
                        <field name="google_analytics_cl_account_location"/>
                        <field name="cs_notes"/>
                        <field name="ops_notes"/>
                        <field name="cat_notes"/>
                        <field name="proofing_contacts_emails" widget="copyable" />
                    </group>
                </page>
                <page name="attachments" string="Attachments">
                    <group>
                        <field name="clx_attachment_ids" widget="many2many_binary"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="clx_state" widget="statusbar"/>
                <button type="object" name="action_done_project" class="oe_stat_button"
                        string="Done" attrs="{'invisible': [('clx_state', '=', 'done')]}"/>
            </xpath>
            <field name="partner_id" position="after">
                <field name="intended_launch_date" required="1"/>
                <field name="deadline" required="1"/>
                <field name="clx_sale_order_ids" widget="many2many_tags"/>
                <field name="clx_project_manager_id" domain="[('share','=',False)]"/>
                <field name="clx_project_designer_id" domain="[('share','=',False)]"/>
                <field name="ops_team_member_id" domain="[('share','=',False)]"/>
                <field name="priority"/>
                <field name="client_services_team"/>
            </field>
            <xpath expr="//field[@name='subtask_project_id']" position="after">
                <field name="create_date" string="Project Create Date"/>
                <field name="complete_date" readonly="1" force_save="1"/>
            </xpath>
            <field name="message_follower_ids" position="after">
                <field name="message_ids" widget="mail_thread"/>
            </field>
            <xpath expr="//group[@name='misc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="string">Account Manager</attribute>
            </field>
        </field>
    </record>

    <!-- Inherit Form View to added custom fields it -->
    <record id="view_task_form2_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="replace">
                <field name="name" placeholder="Choose the Repository Task field and name will be autoupdated."/>
            </xpath>
            <field name="tag_ids" position="after">
                <field name="clx_priority"/>
                <field name="client_services_team"/>
                <!-- 
                    Toggle Labels based on Task or SubTask
                 -->
                <field name="create_date" string="Task Create Date" attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                <field name="task_complete_date" string="Task Complete Date" readonly="1" attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                <field name="create_date" string="SubTask Create Date" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                <field name="task_complete_date" string="SubTask Complete Date" readonly="1" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                <field name="cancel_client" attrs="{'invisible': True}"/>
            </field>
            <xpath expr="//field[@name='create_date']" position="before">
                <!-- 
                    Toggle Labels based on Task or SubTask
                 -->
                <field name="proof_return_count" string="SubTasks Returned" readonly="1" attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                <field name="proof_return_count" string="Proof Return Count" readonly="1" attrs="{'invisible': [('parent_id', '=', False)]}"/>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="project_id" position="before">
                <field name="partner_id"/>
                <field name="category_id"/>
                <field name="vertical"/>
                <field name="implementation_specialist_id"/>
                <field name="account_user_id" string="Account Manager"/>
                <field name="website" widget="url"/>
            </field>
            <xpath expr="//field[@name='date_deadline']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="before">
                <!-- Toggle Labels based on Task or SubTask -->
                <field name="date_deadline" string="Task Due Date" attrs="{'invisible': [('parent_id', '!=', False)]}" required="1"/>    
                <field name="date_deadline" string="SubTask Due Date" attrs="{'invisible': [('parent_id', '=', False)]}" required="1"/>
            </xpath>
             <xpath expr="//field[@name='date_deadline']" position="before">
                <!-- Toggle Labels based on Task or SubTask -->
                 <field name="task_intended_launch_date" string="Task Launch Date" attrs="{'invisible': [('parent_id', '!=', False)]}" required="1"/>    
                <field name="task_intended_launch_date" string="SubTask Launch Date" attrs="{'invisible': [('parent_id', '=', False)]}" required="1"/>
            </xpath>
            <xpath expr="//page[@name='extra_info']" position="attributes">
                  <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button type="object" name="action_view_popup_task" class="oe_stat_button"
                        string="Complete" context="{'complete':'complete'}"/>
            </xpath>
            <xpath expr="//button[@name='action_open_parent_task']" position="after">
                <field name="clx_sale_order_id" invisible="1"/>
                <button type="object" name="action_view_clx_so" class="oe_stat_button" icon="fa-dollar"
                        string="Sales Order" attrs="{'invisible': [('clx_sale_order_id', '=', False)]}"/>
            </xpath>
            <field name="user_id" position="after">
                <field name="req_type" widget="radio" attrs="{'invisible' : [('parent_id', '!=', False)]}"/>
                <field name="repositary_task_id"
                       attrs="{'invisible' : ['|', ('parent_id', '!=', False), ('id', '=', False)]}"
                       domain="[('req_type','=',req_type)]"
                />
                <field name="sub_repositary_task_ids" widget="many2many_tags"
                       attrs="{'invisible' : ['|', ('parent_id', '=', False), ('id', '=', False)]}"/>
                <field name="clx_task_manager_id" string="CS Team Member"/>
                <field name="clx_task_designer_id" domain="[('share','=',False)]"/>
                <field name="ops_team_member_id" domain="[('share','=',False)]"/>
                <field name="team_ids" widget="many2many_tags"/>
                <field name="team_members_ids" widget="many2many_tags"/>
            </field>

            <xpath expr="//page[@name='description_page']" position="after">
                <!-- Toggel label on Requirments tab if client cancellation project -->
                <page name="requirements" string="Cancellation Requirements" attrs="{'invisible': [('cancel_client', '=', False)]}">
                    <group>
                        <field name="requirements"/>
                    </group>
                </page>
                <page name="requirements" string="Requirements" attrs="{'invisible': [('cancel_client', '=', True)]}">
                    <group>
                        <field name="requirements"/>
                    </group>
                </page>
                <page name="extra_details" string="Extra Info">
                    <group>
                        <field name="management_company_type_id"/>
                        <field name="google_analytics_cl_account_location"/>
                        <field name="call_rail_destination_number"/>
                        <field name="dni"/>
                        <field name="cs_notes"/>
                        <field name="ops_notes"/>
                        <field name="cat_notes"/>
                        <field name="art_assets"/>
                        <field name="proofing_contacts_emails" widget="copyable" />
                    </group>
                </page>
                <page name="ads_link" string="Ads Link">
                        <field name="project_ads_link_ids">
                            <tree editable="bottom">
                                <field name="category_id" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                                <field name="description"/>
                                <field name="link" widget="url"/>
                            </tree>
                        </field>
                </page>
                <page name="review_assignment" string="Review Assignment"
                      attrs="{'invisible': [('parent_id', '=', False)]}">
                    <group>
                        <field name="reviewer_user_id"/>
                        <field name="fix"/>
                    </group>
                </page>
                <page name="proof_returned" string="Proof Return Attribution" attrs="{'invisible': [('parent_id', '=', False)]}">
                    <group>
                        <!-- Show this field view to enable Proof Attribution Form popup-->
                        <field name="proof_return_ids" nolabel="1" class="oe_edit_only">
                            <tree>
                                <field name="team_id"/>
                                <field name="create_date"/>
                                <field name="proof_return_count" string="Return Sequence"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <!-- Show this field view to disable Proof Attribution Form popup-->
                        <field name="proof_return_ids" nolabel="1" class="oe_read_only" style="pointer-events:none;">
                            <tree>
                                <field name="team_id"/>
                                <field name="create_date"/>
                                <field name="proof_return_count" string="Return Sequence"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="sub_task" string="Sub Tasks">
                    <field name="sub_task_project_ids">
                        <tree>
                            <field name="task_id" invisible="1"/>
                            <field name="sub_task_id"/>
                            <field name="sub_task_name"/>
                            <field name="team_ids" widget="many2many_tags"/>
                            <field name="team_members_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="stage_id"/>
                            <button string='Open' name="redirect_task"
                                    type="object"
                                    attrs="{'invisible': [('task_id', '=', False)]}"
                            />
                        </tree>
                    </field>
                </page>
                <page name="attachments" string="Attachments">
                    <group>
                        <field name="clx_attachment_ids" widget="many2many_binary"/>
                    </group>
                </page>
            </xpath>
            <field name="description" position="attributes">
                <attribute name="attrs">{'invisible': [('parent_id', '!=', False)]}</attribute>
            </field>
            <field name="description" position="after">
                <field name="clx_description" attrs="{'invisible' : [('parent_id', '=', False)]}"/>
            </field>
        </field>
    </record>

    <!--inherit search view for add group by team -->
    <record id="view_task_search_form_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.task.search.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Ops Team Member" name="ops_team" domain="[]"
                        context="{'group_by':'ops_team_member_id'}"/>
                <filter string="CS Team Member" name="cs_team" domain="[]"
                        context="{'group_by':'clx_task_manager_id'}"/>
                <filter string="CAT Team Member" name="cat_team" domain="[]"
                        context="{'group_by':'clx_task_designer_id'}"/>                
                <filter string="Implementation Specialist" name="Implementation Specialist" context="{'group_by': 'implementation_specialist_id'}"/>
            </xpath>
            <xpath expr="//group//filter[@name='user']" position="attributes">
                <attribute name="string">Account Manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_project_project_filter_inherit_clx_task_management" model="ir.ui.view">
        <field name="name">project.project.search.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="implementation_specialist_id" string="Implementation Specialist"/>
            </xpath>
            <xpath expr="//group//filter[@name='Manager']" position="attributes">
                <attribute name="string">Account Manager</attribute>
            </xpath>
            <xpath expr="//filter[@name='inactive']" position="after">
                <separator/>
                <filter string="New" name="new" domain="[('clx_state', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('clx_state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('clx_state', '=', 'done')]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Implementation Specialist" name="Implementation Specialist" context="{'group_by': 'implementation_specialist_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="project.project_task_action_from_partner" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="context">{
            'pivot_row_groupby': ['user_id'],
            'search_default_project_id': [active_id],
            'default_project_id': active_id,
            }
        </field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click <i>Create</i> to start a new task.
            </p>
            <p>
                To get things done, use activities and status on tasks.
                <br/>
                Chat in real time or by email to collaborate efficiently.
            </p>
        </field>
        <field name="domain">[('parent_id','=',False)]</field>
    </record>

    <record id="action_view_task" model="ir.actions.act_window">
        <field name="name">All SubTasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="context">{'search_default_my_tasks': 1,'search_default_team' : 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="domain">[('parent_id','!=',False)]</field>
    </record>

    <!-- Projects Menu Button Action Handler -->
    <record id="project.open_view_project_all" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">project.project</field>
        <field name="domain">[]</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="project.view_project_kanban"/>
        <field name="search_view_id" ref="project.view_project_project_filter"/>
        <field name="target">main</field>
    </record>

    <!-- All Tasks (Parent Tasks) Menu Button Action Handler -->
    <record id="action_view_parent_task" model="ir.actions.act_window">
        <field name="name">All Tasks</field>
        <field name="res_model">project.task</field>
        <field name="domain">[('parent_id','=',False)]</field>
        <field name="filter" eval="True"/>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'tree', 'view_id': ref('parent_task_tree')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_task_form2_inherit_clx_task_management')}),
                                      (0, 0, {'view_mode': 'kanban'})]"/>
    </record>
    <menuitem name="All Tasks" id="menu_parent_task_clx" parent="project.menu_main_pm"
            action="action_view_parent_task" sequence="1"/>

    <!-- All Subtask Menu Button Action Handler -->
    <record id="action_view_sub_task" model="ir.actions.act_window">
        <field name="name">All SubTasks</field>
        <field name="res_model">project.task</field>
        <field name="context">{'search_default_my_tasks': 1,'search_default_team' : 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="domain">[('parent_id','!=',False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'tree', 'view_id': ref('subtask_tree')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_task_form2_inherit_clx_task_management')}),
                                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('clx_task_management_kanban')})]"/>
    </record>
    <menuitem name="All SubTasks" id="menu_sub_task_clx" parent="project.menu_main_pm"
