<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="bista_clx_ckus_check_customize" inherit_id="l10n_us_check_printing.ckus_check">
    <xpath expr="//div[@class='ckus_payee_addr']" position="replace">
        <div class="ckus_payee_addr" style='margin-top:15px;' t-esc="page['partner_id']" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
    </xpath>
    <xpath expr="//div[@class='ckus_memo']" position="replace">
        <div class="ckus_memo" style='margin-top:15px;' t-esc="page['memo']"/>
    </xpath>
</template>

</data>
</odoo>