<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to add start date field -->
    <record id="sale_subscription_view_form_inherited_subscription_creation" model="ir.ui.view">
        <field name="name">sale.subscription.form.inherited.subscription.creation</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <field name='team_id' position="after">
                <field name="product_id"/>
                <field name="is_active" readonly="1" force_save="1"/>
                <field name="initial_sale_order_id"/>
                <!-- <field name="co_op_percentage"/> -->
            </field>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='price_unit']"
                   position="after">
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='product_id']"
                   position="after">
                <field name="start_date" readonly="1"/>
                <field name="end_date"/>
                <field name="line_type" invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='quantity']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='price_unit']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='name']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='discount']"
                   position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//page[@id='other_info']/group" position="after">
                <group>
                    <field name="id" invisible="1"/>
                    <field name="co_op_partner_ids" readonly="1">
                        <tree editable="bottom" context= "{'subscription_id':id}">
                            <field name="partner_id"/>
                            <field name="ratio"/>
                            <field name="subscription_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <!--inherit Kanban View to add product name -->
    <record model="ir.ui.view" id="sale_subscription_view_kanban_inherit_subscription_creation">
        <field name="name">sale.subscription.kanban.inherited.subscription.creation</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_kanban"/>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban/templates//field[@name='code']" position="after">
                <strong>
                    <!--<field name="product_id"/>-->
                    <field name="product_des"/>
                </strong>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_view_list_inherit_clx_subscription_creation" model="ir.ui.view">
        <field name="name">sale.subscription.list</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_list"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="product_id"/>
                <field name="is_active" readonly="1"/>
            </xpath>

        </field>
    </record>

    <record id="sale_subscription.sale_subscription_action" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">sale.subscription</field>
        <field name="view_mode">tree,kanban,form,pivot,graph,cohort,activity</field>
        <field name="context">{"search_default_my_subscriptions":1}</field>
        <field name="domain">[]</field>
    </record>
</odoo>
