<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_api_form" model="ir.ui.view">
        <field name="name">res.config.settings.api.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='map_view']" position="after">
                <h2 class="mt32">API Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="api_token">
                            <div class="text-muted">
                                API Access Token. Used to do grant access for external API requests.
                            </div></label>
                            <div class="text-muted">
                                <field name="api_token"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
