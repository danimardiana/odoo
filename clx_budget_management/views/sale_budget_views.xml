<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!-- -->

    <record id="sale_budget_changes_search_view" model="ir.ui.view">
        <field name="name">sale.budget.changes.search.view</field>
        <field name="model">sale.budget.changes</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <group expand='0' string='Group by...'>
                    <filter string='Customer' name="group_by_partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string='Change Date' name="group_by_change_date" context="{'group_by': 'change_date'}"/>
                </group>
            </search>
        </field>
    </record> 

    <record id="sale_budget_changes_tree_view" model="ir.ui.view">
        <field name="name">sale.budget.changes.tree.view</field>
        <field name="model">sale.budget.changes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="subscription_href" widget="clx_href" options="{'display_icon': '1', 'display_url': '0', 'open_new': '1'}" string="URL"/>
                <field name="report_href" widget="clx_href" options="{'display_icon': '1', 'display_url': '0', 'open_new': '1','icon':'fa-bar-chart'}" string="URL" />                

                <field name="product_id" /> 
                <field name="price_full" />                 
                <field name="change_wholesale"/>
                <field name="change_mngmt_fee"/>
                <field name="change_date"/>
                <field name="change_price"/>
                <field name="prev_date"/>
                <field name="prev_price" attrs = "{'invisible':[('prev_price','=','False')]}"/>                
                <field name="prev_wholesale" attrs = "{'invisible':[('prev_price','=','False')]}"/>
                <field name="next_date" attrs = "{'invisible':[('next_price','=','False')]}" optional="hide"/>
                <field name="next_price" attrs = "{'invisible':[('next_price','=','False')]}" optional="hide"/>                 
                <field name="next_wholesale" attrs = "{'invisible':[('next_price','=','False')]}" optional="hide"/> 
                <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                <field name="completed_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_sale_budget_changes" model="ir.actions.act_window">
        <field name="name">Budget Changes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.budget.changes</field>
        <field name="view_mode">tree</field>
        <!-- <field name="context">{'search_default_group_by_partner_id': 1,'search_default_group_by_start_date':1}</field> -->
        <field name="search_view_id" ref="clx_budget_management.sale_budget_changes_search_view"/> 
    </record>

    <record id="complete_budgets_action" model="ir.actions.server">
        <field name="name">Complete</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_sale_budget_changes"/>
            <field name="binding_model_id" ref="model_sale_budget_changes" />
            <field name="state">code</field>
            <field name="code">records.complete_budget_changes()</field>
    </record>

    <!-- This Menu for sale Budget -->
    <menuitem id="main_menu_sale_budget"
              name="Budgets Management"
              web_icon="clx_budget_management,static/description/icon.png"
              sequence="2"/>

    <!-- This Menu for sale Budget -->
    <menuitem id="menu_sale_budget_notification"
              name="Budget Changes"
              parent="clx_budget_management.main_menu_sale_budget"
              action="clx_budget_management.action_sale_budget_changes"
              sequence="2"/>

</odoo>