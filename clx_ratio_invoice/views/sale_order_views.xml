<?xml version="1.0" encoding="UTF-8" ?>
<odoo>   

    <!-- Inherit Form View to Modify it -->
    <record id="co_op_saleorder_tree" model="ir.ui.view">
            <field name="name">co.op.sale.order.partner.view.tree</field>
            <field name="model">co.op.sale.order.partner</field>
            <field name="type">tree</field>
            <field name="arch" type="xml"> 
                <tree string="Sales Order Currency Lines" editable="bottom" create="1" delete="1" import="0" duplicate="1">
                    <field name="partner_id" />
                    <field name="ratio" />
                    <field name="sale_order_line_id" invisible="1"/>     
                    <button type="object" icon="fa-trash-o" name="unlink" string="Unlink" class="btn-secondary"/>
                </tree>
            </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="view_order_form_inherit_clx_ration_invoice" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- <field name="partner_id" widget="copyable" copyable="1"/> -->
                <field name="is_co_op"/>

            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="is_co_op" invisible="True"/>
                <field name="total_coop_percenage" attrs="{'column_invisible':[('parent.is_co_op', '=', False)]}"/>
                <button  name="sale_order_line_action" string="co-op" context="{'default_sale_order_line_id': id}" type="object" attrs="{'invisible':[('is_co_op', '=', False)]}" class="oe_inline oe_stat_button" style="background:rgba(46, 210, 162, 0.2);"/>
            </xpath>            
            <xpath expr="//field[@name='name']"  position="attributes">
                <attribute name="widget">copyable</attribute>
            </xpath>
        </field>
    </record>

</odoo>