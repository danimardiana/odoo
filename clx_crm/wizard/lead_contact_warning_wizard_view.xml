<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_clx_existing_contact_wizard" model="ir.ui.view">
      <field name="name">existing.contact.warning.tree</field>
      <field name="model">lead.contact.warning.wizard</field>
      <field name="arch" type="xml">
          <!-- <div style="overflow-wrap: break-word;">
            <field name="message"/>   
          </div> -->
          <form>
            <field name="existing_contact_ids" >
              <tree name="existing_contacts" 
                    string="Existing Contacts"
                    decoration-success="selected == False"
                    decoration-bf = "selected == False"
                    editable="bottom" 
                    create="false" 
                    delete="false">
                <button name="selected_changes" type='object' string="Select"/>
                <field name="selected" invisible="1"/>
                <field name="crm_lead_contact_id" invisible="1"/>
                <field name="crm_lead_contact_name" invisible="1"/>
                <field name="existing_res_partner_id" invisible="1"/>
                <field name="existing_name" string="Select One Per Existing Contact" readonly="1"/>
                <field name="existing_function" invisible="1"/>
                <field name="existing_email" string="Email" readonly="1"/>
                <field name="existing_phone" string="Phone" readonly="1"/>
                <field name="existing_city" string="City" readonly="1"/>
                <field name="existing_state" string="State" readonly="1"/>
              </tree>
            </field>
            <footer>
              <button string="Save" type="object" name="set_validated_contacts"/>
              <button string="Cancel" special="cancel" class="btn btn-secondary"/>
            </footer>
          </form>
      </field>
    </record>

    <record id="view_clx_lead_contact_search" model="ir.ui.view">
        <field name="name">lead.contact.validation.search.view</field>
        <field name="model">lead.contact.warning.wizard</field>
        <field name="arch" type="xml">
            <search string="Existing Contacts">
              <group expand="1" string="Group By">
                <filter string="Lead Contact" name="lead_contact" domain="[]" context="{'group_by':'crm_lead_contact_name'}"/>
              </group>
            </search>
        </field>
    </record>
  </data>
</odoo>